<Window x:Class="ComMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/ComMonitor;component/Resources/TCP-IP32.ico"
        xmlns:mdi="clr-namespace:WPF.MDI;assembly=WPF.MDI"
        Title="ComMonitor" Height="640" Width="1120" Loaded="Window_Loaded" MouseDown="Window_MouseDown" Closed="Window_Closed">
    <Grid Background="DarkGray" >
        <Menu Name="MainMenu" Margin="0" VerticalAlignment="Top" Height="28" >
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click_Exit">
                    <MenuItem.Icon>
                        <Image Source="/ComMonitor;component/Resources/Icons32/round-delete-button.png" Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Connections">
                <MenuItem Header="New Connections Window" Click="MenuItem_Click_NewConnectionsWindow">
                    <MenuItem.Icon>
                        <Image Source="/ComMonitor;component/Resources/Icons32/new.png" Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Load Connections" Click="MenuItem_Click_LoadConnections">
                    <MenuItem.Icon>
                        <Image Source="/ComMonitor;component/Resources/Icons32/open-diary.png" Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save Connections" Click="MenuItem_Click_SaveConnections">
                    <MenuItem.Icon>
                        <Image Source="/ComMonitor;component/Resources/Icons32/file-folder.png" Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Window">
                <MenuItem Header="Tideled" Click="MenuItem_Click_Tideled"/>
                <MenuItem Header="Cascade" Click="MenuItem_Click_Cascade"/>
                <Separator/>
                <MenuItem Header="Close all" Click="MenuItem_Click_CloseAll"/>
            </MenuItem>
            <MenuItem Header="?">
                <MenuItem Header="Change Log" Click="MenuItem_Click_ChangeLog"/>
                <Separator/>
                <MenuItem Header="About" Click="MenuItem_Click_About">
                    <MenuItem.Icon>
                        <Image Source="/ComMonitor;component/Resources/Icons32/round-help-button.png" Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar Name="MainToolBar" Margin="0,28,0,0" Height="31" VerticalAlignment="Top" Background="#FF99B4D3">
            <Button Click="MenuItem_Click_Exit" ToolTip="Exit">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/ComMonitor;component/Resources/Icons32/round-delete-button.png" Stretch="Fill" />
                </StackPanel>
            </Button>
            <Button Click="MenuItem_Click_NewConnectionsWindow" ToolTip="New Connections Window">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/ComMonitor;component/Resources/Icons32/new.png" Stretch="Fill" />
                </StackPanel>
            </Button>
            <Button Click="MenuItem_Click_LoadConnections" ToolTip="Load Connections">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/ComMonitor;component/Resources/Icons32/open-diary.png" Stretch="Fill" />
                </StackPanel>
            </Button>
            <Button Click="MenuItem_Click_SaveConnections" ToolTip="Save Connections">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/ComMonitor;component/Resources/Icons32/file-folder.png" Stretch="Fill" />
                </StackPanel>
            </Button>
            <Button Click="MenuItem_Click_Message" ToolTip="Add Message">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/ComMonitor;component/Resources/Icons32/lightning-flash.png" Stretch="Fill" />
                </StackPanel>
            </Button>
            <Button Click="MenuItem_Click_About" ToolTip="Aout">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/ComMonitor;component/Resources/Icons32/round-help-button.png" Stretch="Fill" />
                </StackPanel>
            </Button>
        </ToolBar>
        <DockPanel Margin="0,59,0,38">
            <mdi:MdiContainer Theme="Aero" x:Name="MainMdiContainer"/>
        </DockPanel>
        <StatusBar Name="MainStatusBar" VerticalAlignment="Bottom" Height="38"/>
    </Grid>
</Window>
